<% wrapped_content=capture do %>
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row govuk-width-container dfe-width-container markdown-page two-column-page">
      <div class="govuk-grid-column-two-thirds">
        <%= yield %>
        <h2 class="govuk-heading-m">Share this resource</h2>
        <div class="share-resource-container">
          <div class="share-resource">
            <img src="<%= @base_url %>/assets/images/link-purple.svg" alt="Link icon" class="share-resource__icon"/>
            <button onclick="window.navigator.clipboard.writeText(window.location.href);
"  class="button-link">
              Copy link
            </button>
          </div>
          <div class="share-resource">
            <img src="<%= @base_url %>/assets/images/mail-purple.svg" alt="Mail icon" class="share-resource__icon"/>
            <a href="mailto:school.workloadandwellbeing@education.gov.uk" class="govuk-link">Mail</a>
          </div>
        </div>

      </div>  
      <div class="govuk-grid-column-one-third">
        <hr class="govuk-section-break--blue govuk-section-break--thick">
        <%= render '/partials/feedback.*' %>
      </div>
    </div>
  </div>
<% end %>

<%= render '/default.html' , content: wrapped_content %>
