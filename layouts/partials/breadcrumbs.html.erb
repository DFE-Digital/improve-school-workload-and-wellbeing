<% breadcrumbs_trail_without_current = breadcrumbs_trail[1...-1] %>
<%= puts breadcrumbs_trail_without_current %>
<% if breadcrumbs_trail_without_current.size > 0 %>
  <div class="govuk-breadcrumbs govuk-width-container govuk-!-margin-top-7">
    <div class="govuk-breadcrumbs__list">
      <ol class="govuk-breadcrumbs__list"></ol>
        <% breadcrumbs_trail_without_current.each do |ancestor| %>
          <li class="govuk-breadcrumbs__list-item">
            <% if ancestor[:title] %>
              <%= link_to_unless_current(ancestor[:title], ancestor.path, class: 'govuk-breadcrumbs__link') %>
            <% else %>
              Title missing
            <% end %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
<% end %>
